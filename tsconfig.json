{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./@types"],
    "baseUrl": ".",
    "paths": {
      "#services": ["./services/index"],
      "#models": ["./models/index"],
      "#lib/*": ["./lib/*"],
      "#components/*": ["./components/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "@types/**/*.d.ts"]
}
